@model AddContentViewModel

@{
    ViewData["Title"] = "Create";
}
<script src="~/js/site.js"></script>
<div class="row">
    <div id="addContentForm">
        <div class="form-group">
            <label asp-for="Type"></label>
            <select id="addContentSelect" asp-for="Type" 
                    asp-items="@Html.GetEnumSelectList<ContentType>()" 
                    onchange="GetSuitedBox()">
            </select>
        </div>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h3 class="text-danger">@TempData[ContentConst.ERROR]</h3>
            <h4>Create a new project.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div id="inputContentDiv">                   
                    <label asp-for="Text"></label>
                    <input asp-for="Text" class="form-control tempInput" type="url" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-default">I am ready !</button>
        </form>
    </div>
</div>