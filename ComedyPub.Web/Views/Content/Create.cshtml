@model AddContentViewModel

@{
    ViewData["Title"] = "Create";
}
<script src="~/js/site.js"></script>
<div class="row">
    <div id="addContentForm">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="createContent">            
            <div class="form-group">
                <label asp-for="Type"></label>
                <select id="addContentSelect" asp-for="Type"
                        asp-items="@Html.GetEnumSelectList<ContentType>()"
                        onchange="GetSuitedBox()"></select>
            </div>
            <h3 class="text-danger">@TempData[ContentConst.ERROR]</h3>
            <h4>Create a new project.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" id="createTitle" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">

                <div id="inputContent">
                    <label asp-for="Text"></label>
                    <input asp-for="Text" class="form-control tempInput" type="url"/>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div id="textAreaContent" hidden>
                    <label asp-for="Text"></label>
                    <textarea asp-for="Text" class="form-control" id="contentArea"> </textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
              
            </div>
            <button type="submit" class="btn btn-default">I am ready !</button>
        </form>
    </div>
</div>

<script>
    BindOptions();
    GetSuitedBox();
</script>
