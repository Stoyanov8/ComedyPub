@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
<div class="sidenav" id="side"> 
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @if (SignInManager.IsSignedIn(User))
            {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-danger">Log out</button>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        </ul>
    }
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Jokes" asp-action="Index">Jokes only</a></li>
        <li><a asp-area="" asp-controller="Pictures">Pictures only</a></li>
        <li><a asp-area="" asp-controller="Videos" asp-action="Index">Videos only</a></li>
    </ul>
</div>
